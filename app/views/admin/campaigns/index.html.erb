<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h3 class="panel-title">Campaign Management</h3></div>
  <div class="panel-body">
    <p>The following campaigns are associated with this Organization.</p>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Deadline</th>
		<th>Delete</th>
      </tr>
    </thead>
    <tbody>
        <%= render :partial => 'campaign', :collection => @campaigns %>
    </tbody>
  </table>
  <div style="margin-top:20px;">
    <%= form_for :campaign do |f| %>
        <p>
          <%= f.label :Name %><br>
          <%= f.text_field :Name %>
        </p>
      
        <p>
          <%= f.label :Deadline %><br>
          <%= f.text_area :Deadline %>
        </p>
      
        <p>
          <%= f.submit %>
        </p>
    <% end %>
    <button class="btn btn-primary">Add New Campaign</button>
  </div>
</div>
